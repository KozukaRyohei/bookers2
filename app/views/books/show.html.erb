
<!--ページの左側-->
<h2>User info</h2>

  <%= image_tag @user.get_profile_image(100,100) %>
  <!--↓indexから流用↓-->
  <table class = "table" >
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

    <%= link_to "edit", edit_user_path(@user.id) %> <!--あとから画像に変更-->

    <h2>New book</h2>
    <%= form_with model: @book_new do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book'%>
    <% end %>
  <!--↑indexから流用↑-->
  <h2>Book detail</h2>

  <table class="table">
    <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(80,80) %>
        <% end %>
      </td>
      <td><%= link_to @book.title,book_path(@book) %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    </tr>

    </tbody>
  </table>

