
          <%= render 'book', book_new: @book_new, user: @user %>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
            <table class="table">
              <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@user) do %>
                      <%= image_tag @user.get_profile_image(80,80) %>
                      </br>
                      <%= @user.name %>
                    <% end %>

                  </td>
                  <td><%= link_to @book.title,book_path(@book) %></td>
                  <td><%= @book.body %></td>
                  <% if @book.user == current_user %>
                    <td>
                      <%= link_to edit_book_path(@book.id),class:"btn btn-sm btn-success" do %>
                        edit
                      <% end %>
                    </td>
                    <td>
                      <%= link_to book_path(@book.id),class:"btn btn-sm btn-danger",method: :delete, "data-confirm" => "本当に消しますか？" do %>
                        destroy
                      <% end %>
                    </td
                  <% end %>
                </tr>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </main>

