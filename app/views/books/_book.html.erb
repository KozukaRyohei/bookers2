
<h2>User info</h2>

  <%= image_tag user.get_profile_image(100,100) %>
  <!--↓indexから流用↓-->
  <table class = "table" >
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

    <%= link_to "edit", edit_user_path(user.id) %> <!--あとから画像に変更-->

    <h2>New book</h2>
    <%= form_with model: book_new do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book'%>
    <% end %>
