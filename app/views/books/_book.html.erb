  <main>
    <div> <%= flash[:notice] %> </div> 
    <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <!--↓ Userinfo ↓-->
            <h2>User info</h2>
            <%= image_tag user.get_profile_image(100,100) %>
            <table class = "table" >
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <!--↑ User info ↑-->

              <!--edit-->
            <div class = "row">
              <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
                <i class="fa-solid fa-user-gear"></i>
              <% end %>
            </div>
            <!--↑ edit ↑-->
            <!--↓ New book ↓-->
            <h2 class = "mt-3">New book</h2>
            <%= form_with model: book_new do |f| %>
              <p>Title</p>
              <input class="form-control book_title" type="text" name="book[title]" id="book_title">
               <!--f.text_field :title-->
              <p>Opinion</p>
              <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
               <!--f.text_area :body-->
              <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
               <!--f.submit 'Create Book'-->
            <% end %>
            <!--↑ New book ↑-->
          </div>
