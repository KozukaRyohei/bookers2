
<%= render 'book', book_new: @book, user: @user %>

<h2>Books</h2>
<table class="table table-hover table-inverse">

  <thead>
    <tr>
      <th></th><!--画像の部分はカラム名空白-->
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
      </td>
        <td><%= link_to book.title,book_path(book.id)  %></td>
        <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>