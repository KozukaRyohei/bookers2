
<!--ページの左側-->
<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>

<table class = "table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th></th>
    </tr>
  </tbody>
</table>

<div class = "row">
  <%= link_to "edit", edit_user_path(@user.id) %> <!--あとから画像に変更-->
</div>

<h2 class ="mt">New book</h2>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book'%>
  <% end %>


  <!--ページの右側-->
<h2>Books</h2>
<table class="table table-hover table-inverse">

  <thead>
    <tr>
      <th></th><!--画像の部分はカラム名空白-->
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
      </td>
        <td><%= link_to book.title,book_path(book.id)  %></td>
        <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>