<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2 </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/1c872d371f.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

        <% if user_signed_in? %>
    <!--ログイン中のヘッダー-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container" >
            <a class="navbar-brand" href="/">
                <span>Bookers</span>
            </a>
            <div class="navbar-collapse collapse">
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to user_path(current_user.id), class:"nav-link text-light" do %>
                     <i class= "fas fa-home"></i> Home
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path, class:"nav-link text-light" do %>
                      <i class="fas fa-users"></i> Users
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path, class:"nav-link text-light" do %>
                    <i class="fas fa-book-open"></i> Books
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, class:"nav-link text-light",method: :delete do %>
                    <i class="fas fa-sign-out-alt"></i> Log out
                  <% end %>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
    </header>
          <% else %>
    <!--ログインしていない状態のヘッダー-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container" >
            <a class="navbar-brand" href="/">
                <span>Bookers</span>
            </a>
            <div class="navbar-collapse collapse">
              <ul class="navbar-nav ml-auto">
                <li></li>
                  <%= link_to root_path, class:"nav-link text-light" do %>
                    <i class="fas fa-home"></i> Home
                  <% end %>
                </li>

                <li>
                  <%= link_to about_path, class:"nav-link text-light" do %>
                    <i class="fas fa-link"></i> About
                  <% end %>
                </li>

                <li>
                  <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                    <i class="fas fa-user-plus"></i> Sign up
                  <% end %>
                </li>

                <li>
                  <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                    <i class="fas fa-sign-in-alt"></i> Log in
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
    </header>
      <% end %>
    <div>
      <!--フラッシュメッセージ-->
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>
    </div>
    <!--バリデーション-->
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
