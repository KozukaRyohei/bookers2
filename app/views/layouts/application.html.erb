<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <h2>Bookers</h2>

    <% if user_signed_in? %>
    <!--ログイン中のヘッダー-->
      <li>
         <%= link_to "Home"%>
      </li>
      <li>
        <%= link_to "Users" %>
      </li>
      <li>
        <%= link_to "Books" %>
      </li>
      <li>
        <%= link_to "Log out" %>
      </li>

    <% else %>
    <!--ログインしていない状態のヘッダー-->
      <li>
         <%= link_to "Home"%>
      </li>
      <li>
        <%= link_to "About" %>
      </li>
      <li>
        <%= link_to "Sign up" %>
      </li>
      <li>
        <%= link_to "Log in" %>
      </li>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
